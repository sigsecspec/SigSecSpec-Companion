# Security Companion Pro - Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=production

# VAPID Keys for Web Push
# Generate these using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=YOUR_PUBLIC_KEY_HERE
VAPID_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE
VAPID_EMAIL=mailto:admin@yourdomain.com

# Database Configuration (optional)
DATABASE_URL=mongodb://localhost:27017/security-companion
# or for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/security-companion

# Median.co Integration (if using)
MEDIAN_API_KEY=your_median_api_key_here

# OneSignal Integration (if using with Median)
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_API_KEY=your_onesignal_api_key

# Firebase Cloud Messaging (alternative to OneSignal)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_SENDER_ID=your_firebase_sender_id

# Security & Authentication
JWT_SECRET=your_super_secret_jwt_key
API_KEY=your_api_key_for_authentication

# CORS Settings
ALLOWED_ORIGINS=https://yourdomain.com,https://app.median.co

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Notification Settings
MAX_NOTIFICATION_RETRIES=3
NOTIFICATION_BATCH_SIZE=100
EMERGENCY_WEBHOOK_URL=https://your-emergency-system.com/webhook

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# SSL/TLS (for production)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem